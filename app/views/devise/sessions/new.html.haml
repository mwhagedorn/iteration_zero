= render :partial => "shared/notice_invite_required"

#page_header
  %h2
    = "Sign In"

#page_body
  - form_for resource_name, resource, :url => session_path(resource_name), :builder => HandcraftedFormBuilder do |f|
    - field_set_tag do
      = f.text_field :email
      = f.password_field :password
      = f.submit "Sign In" do
        - link_to "Reset Password", new_user_password_url, :class => "green"