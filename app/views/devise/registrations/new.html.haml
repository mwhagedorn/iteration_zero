= render :partial => "shared/notice_invite_required"

#page_header
  %h2
    Sign up for an Account

#page_body
  = error_messages_for :user
  - form_for resource_name, resource, :url => registration_path(resource_name), :builder => HandcraftedFormBuilder do |f|
    %fieldset
      %legend Sign up for an Account
      = f.text_field :email, :example => "johnsmith@gmail.com"
      = f.text_field :login, :label => "Profile url"
      = f.password_field :password
      = f.password_field :password_confirmation
      = f.submit "Sign up" do
        - link_to "Cancel", root_url, :class => "red"